# プロジェクト単位でのコーディング規約を揃えるために
# リポジトリのrootディレクトリにおいておく.editorconfigファイルのサンプル
# @see http://www.tam-tam.co.jp/tipsnote/program/post6306.html
root = true

[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2

charset = utf-8

[*.md]
charset = utf-8
indent_size = 4

[*.scm]
indent_size = 2
